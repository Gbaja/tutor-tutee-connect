{{> pages_nav}}
<header class="pages-header">
  <h1 class="pages-header__title"> Log in </h1>
</header>
<section class="login">
  {{#if success}}
    <p>{{success}} </p>
    {{else if error_msg}}
    <p>{{error_msg}} </p>
  {{/if}}
  <form class="login__form" action="/login" method="post">
    <label for="loginEmail" class="login__form__labels"> Email <input type="text" name="login_email" id="loginEmail" class="login__form__inputs"></label>
    <label for="loginPassword" class="login__form__labels"> Password <input type="password" name="login_password" id="loginPassword" class="login__form__inputs"></label>
    <label for="loginButton" class="login__form__labels"> <input type="submit" value="Log in" class="login__form__inputs-submit"> </label>
  </form>
</section>
